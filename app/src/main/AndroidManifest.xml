<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.go">

    <application
        android:allowBackup="true"
        android:icon="@drawable/gomoku_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/gomoku_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- The icon from https://www.kisspng.com/png-xiangqi-chess-gomoku-tablero-de-juego-chinese-ches-287896/-->
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Game">
            <intent-filter>
                <action android:name="com.example.go.Game" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".GameRecord">
            <intent-filter>
                <action android:name="com.example.go.GameRecord" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>